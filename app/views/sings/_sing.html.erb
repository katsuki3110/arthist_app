<div class="sings_item">
  <% if @arthist_flg.present? %>
    <div class="sings_arthistName">
      アーティスト名：<%= link_to sing.arthist.name, arthist_path(sing.arthist) %>
    </div>
    <div class="sings_singName">
      曲名：<%= sing.name %>
    </div>
  <% end %>

  <div class="">
    <% if sing.video_flg == 1 %>
      <iframe width="500" height="300" src="https://www.youtube.com/embed/<%= sing.link %>" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <% elsif sing.video_flg == 2 %>
      <iframe width="500" height="300" src="https://instagram.com/p/<%= sing.link %>/embed" frameborder="0" scrolling="no"></iframe>
    <% end %>
  </div>

  <% if current_user.present? && current_user.id == sing.user_id %>
    <%= link_to "削除", sing_path(sing), {method: :delete, data:{confirm: "削除しますか？"}} %>
  <% end %>

  <% if @like_flg != "1" %>
    <div id="like-<%= sing.id %>">
      <%= render 'likes/like_form', sing: sing %>
    </div>
  <% end %>
</div>
