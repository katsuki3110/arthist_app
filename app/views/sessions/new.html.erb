

<%= form_with(url: sessions_path, scope: :session , local: true) do |form| %>

  <%= form.label       :email %>
  <%= form.email_field :email %>

  <%= form.label          :password %>
  <%= form.password_field :password %>

  <%= form.check_box :remember_me %>
  <%= form.label     :次回から自動でログイン %>

  <%= form.submit "ログイン" %>

<% end %>
