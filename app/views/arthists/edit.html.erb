<h1>アーティスト情報編集</h1>

<%= form_with(model: @arthist, local: true) do |form| %>
  <%= render 'layouts/error_message', object: form.object %>

  <%= link_to image_tag(@arthist.image_url), edit_image_arthist_path(@arthist) %>

  <%= form.label :アーティスト名 %>
  <%= form.text_field :name, {maxlength: 30} %>

  <%= form.label :関連リンク %>
  <%= form.text_field :link %>


  <%= form.submit '更新する' %>

<% end %>
