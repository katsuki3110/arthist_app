<div class="arthists_item">
  <div class="arthists_image_wrapper">
    <% if arthist.image.present? %>
      <%= link_to image_tag(arthist.image_url(:thumb), class: "arthists_image"), arthist_path(arthist) %>
    <% else %>
      <%= link_to image_tag("/assets/default_arthist_mini.png", class: "arthists_image"), arthist_path(arthist) %>
    <% end %>
  </div>

  <div class="arthists_arthistName_wrapper">
    <%= arthist.name %>
  </div>
</div>
